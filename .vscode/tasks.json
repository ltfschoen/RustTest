{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Projects",
      "type": "shell",
      "problemMatcher": [
        "$rustc"
      ],
      "args": [
        "build",
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/bash",
          "args": ["-c", "-i"]
        }
      },
      "command": "cargo",
      "group": "build",
      "presentation": {
        "reveal": "always",
      }
    },
  ]
}